# Include the Perl Modules we need
require POSIX;
require Getopt::Long;
use Cwd ('&getcwd', '&abs_path');
use Mezzanine::Util;
use Mezzanine::PkgVars;
use Mezzanine::Pkg;
use Mezzanine::RPM;
use Mezzanine::Deb;
use Mezzanine::Tar;
use Mezzanine::Build;

# Print usage information
sub
print_usage_info
{
    print "\n";
    $leader = "$progname $version Usage Information";
    $underbar = $leader;
    $underbar =~ s/./-/g;
    print "$leader\n$underbar\n";
    print "\n";
    print "  Syntax:   pkgtool [ options ]\n";
    print "\n";
    print "    -h --help                        Show this usage information\n";
    print "    -d --debug                       Turn on debugging\n";
    print "    -v --version                     Show version and copyright\n";
    print "    -b --build                       Build a package\n";
    print "    -i --install                     Install (unarchive) a package\n";
    print "    -c --contents                    Check the contents of a package\n";
    print "    -q --query <type>                Query attributes of a package\n";
    print "    -o --sources [srcs]              Specify the sources to generate\n";
    print "    -p --package <file>              Specify the package filename\n";
    print "    -s --specfile --scripts <path>   Specify the spec file (or debian script directory) to use\n";
    print "    -m --module <name>               Specify the module name\n";
    print "    -t --target <type>               Specify the package target type\n";
    print "    -a --arch <architecture>         Specify the architecture(s) for which to build\n";
    print "    -P --program <cmd>               Specify the package management program to be used\n";
    print "    -R --rcfile <rcfile>             Specify an alternate rpmrc file\n";
    print "    -D --dir <directory>             Specify \"directory\" as the full path to the module\n";
    print "    -r --root <dir>                  Specify the build/install root (depending on mode)\n";
    print "    -H --hints <file_or_dir>         Specify location of pre-build hints or hint files\n";
    print "    -u --user <userid>               Build as <userid> rather than the current user\n";
    print "       --hi --hint-installer <prog>  Specify the mechanism used to install the hints\n";
    print "       --tar <tarcmd>                Use <tarcmd> as the \"tar\" command\n";
    print "       --zip <zipcmd>                Use <zipcmd> as the compression program\n";
    print "\n";
    exit(MEZZANINE_SUCCESS);
}

# main() here is basically the same as main() in C
sub
main
{
    my ($err, $msg, $outfiles);

    # Set up the basic variables
    $progname = "pkgtool";
    $version = "2.1";
    &print_usage_info() if (!scalar(@ARGV) && &basename($0) !~ /^mz/);
    umask 022;

    @valid_opts = ("h|help", "v|version", "d|debug", "b|build",
                   "i|install", "c|contents", "q|query=s",
                   "o|sources:s", "p|package=s",
                   "s|specfile|scripts=s", "m|module=s", "t|target=s",
                   "a|arch=s", "P|program=s", "R|rcfile=s", "tar=s",
                   "zip=s", "D|destdir=s", "r|root=s", "H|hints=s",
                   "hi|hint-installer=s", "u|user=s");

    Getopt::Long::Configure("no_getopt_compat", "bundling", "no_ignore_case");
    Getopt::Long::GetOptions(@valid_opts);

    # Post-parse the options stuff
    select STDOUT; $| = 1;
    if ($opt_v) {
        # Do not edit this variable.  It is updated automatically by CVS when you commit
        my $rcs_info = 'CVS Revision $Revision: 1.58 $ created on $Date: 2004/01/26 22:15:24 $ by $Author: mej $ ';

        $rcs_info =~ s/\$\s*Revision: (\S+) \$/$1/;
        $rcs_info =~ s/\$\s*Date: (\S+) (\S+) \$/$1 at $2/;
        $rcs_info =~ s/\$\s*Author: (\S+) \$ /$1/;
        print "\n";
	print "$progname $version by Michael Jennings <mej\@eterm.org>\n";
        print "Copyright (c) 2001, Michael Jennings\n";
        print "  ($rcs_info)\n";
        print "\n";
	return MEZZANINE_SUCCESS;
    } elsif ($opt_h) {
	&print_usage_info();   # Never returns
    }

    if ($0 =~ /build$/) {
        $mode = "build";
    } elsif ($0 =~ /inst(all)?$/) {
        $mode = "install";
    } elsif ($opt_b) {
        $mode = "build";
    } elsif ($opt_i) {
        $mode = "install";
    } elsif ($opt_u) {
        $mode = "unarchive";
    } elsif ($opt_c) {
        $mode = "contents";
    } elsif ($opt_q) {
        $mode = "query";
        $query_type = $opt_q;
    } else {
        &fatal_error("Nothing to do!\n");
    }

    &debug_set($opt_d);
    &pkgvar_srcs($opt_o);
    &pkgvar_filename($opt_p);
    &pkgvar_command($opt_P);
    &pkgvar_instructions($opt_s);
    if ($opt_m) {
        if ($pkg_file) {
            $pkg_file = &pkgvar_filename($opt_m, $pkg_file);
        } else {
            $pkg_file = &pkgvar_filename($opt_m);
        }
        &pkgvar_topdir($opt_m);
    }
    &pkgvar_architecture($opt_a);
    &pkgvar_target($opt_t);
    &pkgvar_rcfile($opt_R);
    &pkgvar_tar($opt_tar);
    &pkgvar_zip($opt_zip);
    &pkgvar_topdir($opt_D);
    &pkgvar_instroot($opt_r);
    if ($opt_u) {
        &pkgvar_set("builduser", $opt_u);
        &file_owner(&pkgvar_get("builduser"), "", &pkgvar_instroot());
        dprintf("Building as %s (%lu:%lu)\n", &pkgvar_get("builduser"), $mz_uid, $mz_gid);
    }

    if (!&pkgvar_filename()) {
        if (scalar(@ARGV)) {
            &pkgvar_filename(shift @ARGV);
        } else {
            &pkgvar_filename(".");
        }
    }

    # Handle hint file/directory specification
    if ($opt_H) {
        $ENV{"MEZZANINE_HINTS"} = $opt_H;
    }
    &set_hints_info($ENV{"MEZZANINE_HINTS"});
    if ($opt_hi) {
        # Override installer from command line.
        &set_hints_info("$opt_hi\%");
    }

    $ENV{"LANG"} = "C" if (! $ENV{"LANG"});

    # Signal handling
    $SIG{HUP} = 'IGNORE';
    $SIG{INT} = \&handle_signal;
    $SIG{TERM} = \&handle_signal;
    $SIG{QUIT} = \&handle_fatal_signal;
    $SIG{ILL} = \&handle_fatal_signal;
    $SIG{ABRT} = \&handle_fatal_signal;
    $SIG{FPE} = \&handle_fatal_signal;
    $SIG{SEGV} = \&handle_fatal_signal;
    $SIG{BUS} = \&handle_fatal_signal;
    $SIG{TSTP} = \&handle_fatal_signal;
    $SIG{TTIN} = \&handle_fatal_signal;
    $SIG{TTOU} = \&handle_fatal_signal;

    if ($mode eq "build") {
        my ($pkg, $topdir, $buildroot);

        &pkgvar_cleanup("all");
        #&pkgvar_instroot(&getcwd()) if (! &pkgvar_instroot());
        if ((-e &pkgvar_instructions()) && (! &pkgvar_filename())) {
            &prepare_build_tree();
            ($err, $msg, $outfiles) = &build_topdir();
        } else {
            ($err, $msg, $outfiles) = &build_package();
        }
        if ($err != MEZZANINE_SUCCESS) {
            eprint "Package build failed:  $msg\n";
            return $err;
        }
        print "Package build succeeded.  Output files are:\n\n";
        foreach my $f (split(' ', $outfiles)) {
            if (! -e $f) {
                my $instroot = &pkgvar_instroot();

                if ($instroot && -e "$instroot$f") {
                    $f = $instroot . $f;
                }
            }
            if (&copy_files($f, ".")) {
                print &basename($f);
            } else {
                print $f;
                $err = 1;
            }
            print "\n";
        }
        print "\n";
        &pkgvar_cleanup("temp") if ($err);
        &cleanup_build_tree();
    } elsif ($mode eq "install") {
        my $msg;

        ($err, $msg) = &package_install();
        if ($err != MEZZANINE_SUCCESS) {
            eprint "Unable to install package -- $msg.\n";
        } else {
            print "$msg.\n";
        }
    } elsif ($mode eq "contents") {
        my @results;

        @results = &package_show_contents();
        if (($err = shift @results) != MEZZANINE_SUCCESS) {
            eprint "Unable to examine contents of package.\n";
        }
        print join("", @results), "\n";
    } elsif ($mode eq "query") {
        my @results;

        @results = &package_query($query_type);
        if (($err = shift @results) != MEZZANINE_SUCCESS) {
            eprint "Unable to query package.\n";
        }
        print join("", @results), "\n";
    }
    return $err;
}

exit &main();
